<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_world">

    <fragment
        android:id="@+id/navigation_world"
        android:name="com.example.newsapp.ui.news.NewsFragment"
        android:label="World"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_navigation_world_to_newsDetails"
            app:destination="@id/newsDetails" />
    </fragment>
    <fragment
        android:id="@+id/newsDetails"
        android:name="com.example.newsapp.ui.newsdetails.NewsDetails"
        android:label="NewsDetails" >
        <action
            android:id="@+id/action_newsDetails_to_navigation_world"
            app:destination="@id/navigation_world" />
    </fragment>

</navigation>